<HBox maxHeight="500.0" maxWidth="700.0" minHeight="500.0" minWidth="700.0" prefHeight="500.0" prefWidth="700.0" stylesheets="@../stylesheets/dark-theme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.Admin">
   <children>
      <ImageView fitHeight="80.0" fitWidth="97.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/Logo.png" />
         </image>
         <HBox.margin>
            <Insets left="20.0" top="20.0" />
         </HBox.margin>
      </ImageView>
      <VBox style="-fx-alignment: center;">
         <children>
            <Label text="Admin Panel">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
            <HBox maxHeight="500.0" maxWidth="700.0" minHeight="196.0" minWidth="589.0" prefHeight="196.0" prefWidth="590.0" spacing="50.0" style="-fx-alignment: center;">
               <padding>
                  <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
               </padding>
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-alignment: center;">
                     <children>
                        <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true">
                           <image>
                              <Image url="@../assets/search.png" />
                           </image>
                        </ImageView>
                        <Button mnemonicParsing="false" onAction="#goToSearch" prefWidth="120.0" text="Search">
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-alignment: center;">
                     <children>
                        <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true">
                           <image>
                              <Image url="@../assets/edit.png" />
                           </image>
                        </ImageView>
                        <Button mnemonicParsing="false" onAction="#goToEdit" prefWidth="120.0" text="Edit">
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox maxHeight="500.0" maxWidth="700.0" minHeight="194.0" minWidth="589.0" prefHeight="208.0" prefWidth="590.0" spacing="50.0" style="-fx-alignment: center;">
               <padding>
                  <Insets bottom="35.0" left="35.0" right="35.0" top="50.0" />
               </padding>
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-alignment: center;">
                     <children>
                        <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true">
                           <image>
                              <Image url="@../assets/add.png" />
                           </image>
                        </ImageView>
                        <Button mnemonicParsing="false" onAction="#goToAdd" prefWidth="120.0" text="Add">
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-alignment: center;">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true">
                           <image>
                              <Image url="@../assets/delete.png" />
                           </image>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </ImageView>
                        <Button mnemonicParsing="false" onAction="#goToDelete" prefWidth="120.0" text="Delete">
                           <VBox.margin>
                              <Insets top="45.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
